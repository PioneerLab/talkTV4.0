<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="3dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        app:title=" "
        app:titleMarginStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/search_frame_line"
                android:layout_toLeftOf="@+id/tv_search"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_toRightOf="@id/tvfan_logo"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/search_icon"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/ib_editdelete"
                    android:background="@mipmap/search_delete"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/et_search"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:hint="请输入搜索内容"
                    android:layout_toLeftOf="@id/ib_editdelete"/>
            </RelativeLayout>

            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/tv_search"
                android:paddingRight="10dp"
                android:text="搜索"
                android:textColor="@color/user_center_txt"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:clickable="true"/>
        </RelativeLayout>
        </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>