<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/all_rlt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
            <!-- <VodPlayerVideoView
                 android:id="@+id/playerView"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/black"/>-->
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/ad_rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone">
            </RelativeLayout>
            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ad_rlt"
                >
                <LinearLayout
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/cache_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="8dp"
                            android:gravity="center_vertical"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/pop_cachepopupwindow_img"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/cache_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:layout_alignParentBottom="true"
                                android:visibility="gone"
                                android:text="缓存"/>
                        </RelativeLayout>
                        <com.sumavision.talktv2.ui.widget.MyLinearLayout
                            android:id="@+id/collect_mllt"
                            android:layout_toLeftOf="@id/cache_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_height="40dp">
                            <CheckBox
                                android:id="@+id/collect_checkBox"
                                android:clickable="false"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@null"
                                android:button="@drawable/collect_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:text="收藏"/>
                        </com.sumavision.talktv2.ui.widget.MyLinearLayout>
                        <RelativeLayout
                            android:id="@+id/share_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@id/collect_mllt">
                            <ImageView
                                android:id="@+id/share_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/btn_share_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:layout_alignParentBottom="true"
                                android:text="分享"/>
                        </RelativeLayout>
                        <com.sumavision.talktv2.ui.widget.MyLinearLayout
                            android:id="@+id/praise_mllt"
                            android:layout_toLeftOf="@id/share_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="8dp"
                            android:paddingLeft="12dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_height="40dp">
                            <CheckBox
                                android:id="@+id/praise_checkBox"
                                android:clickable="false"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@null"
                                android:button="@drawable/praise_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:text="点赞"/>
                        </com.sumavision.talktv2.ui.widget.MyLinearLayout>

                        <TextView
                            android:id="@+id/add_praise_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/share_rlt"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:visibility="invisible"
                            android:textSize="12sp"
                            android:text="+1"/>
                        <LinearLayout
                            android:id="@+id/cpllt"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="12dp"
                            android:focusableInTouchMode="true"
                            android:focusable="true">
                            <ImageView
                                android:id="@+id/resource"
                                android:layout_alignParentLeft="true"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:scaleType="fitXY"
                                android:layout_alignParentRight="true"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:clickable="false"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:button="@drawable/resource_selector"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/play_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/white">
                        <RelativeLayout
                            android:id="@+id/program_name_rlt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/program_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:ellipsize="end"
                                tools:text="澳门风云"
                                android:textColor="@color/black"
                                android:layout_marginRight="70dp"
                                android:layout_marginLeft="3dip"
                                android:textSize="20sp" />

                            <RelativeLayout
                                android:id="@+id/rlt_playcount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginTop="2dip"
                                android:layout_below="@+id/program_name">
                                <ImageView
                                    android:id="@+id/playdetail_playtime"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/playdetail_playtime"/>
                                <TextView
                                    android:id="@+id/play_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:textSize="14sp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_toRightOf="@id/playdetail_playtime"
                                    android:gravity="center_vertical"
                                    tools:text="331.4万次播放"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/viewMoreRlt"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="2dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_alignParentLeft="true"
                                    android:text="更多"/>
                                <CheckBox
                                    android:id="@+id/moreIcon"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:button="@drawable/expand_selector"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <!-- 电影电视剧的详情数据-->
                        <TableLayout
                            android:id="@+id/common_tlt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/program_name_rlt"
                            android:visibility="gone">
                            <TableRow
                                android:paddingTop="3dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="上映时间："/>
                                    <TextView
                                        android:id="@+id/release"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        tools:text="2016"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="评分："/>
                                    <TextView
                                        android:id="@+id/score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="14sp"
                                        android:singleLine="true"
                                        android:textColor="#FFF02323"
                                        tools:text="8.9"/>
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:paddingTop="5dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="导演："/>
                                    <TextView
                                        android:id="@+id/director"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        tools:text="周星驰"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="地区："/>
                                    <TextView
                                        android:id="@+id/zone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        tools:text="大陆"/>
                                </LinearLayout>
                            </TableRow>
                            <TableRow
                                android:id="@+id/directorTr"
                                android:paddingTop="5dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="类型："/>
                                    <TextView
                                        android:id="@+id/subType"
                                        android:layout_width="wrap_content"
                                        android:singleLine="true"
                                        android:layout_height="match_parent"
                                        tools:text="冒险/动作/喜剧"/>

                                </LinearLayout>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:paddingTop="5dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="主演："/>
                                    <TextView
                                        android:id="@+id/actor"
                                        android:layout_width="match_parent"
                                        android:singleLine="true"
                                        android:layout_height="match_parent"/>
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>
                        <!-- 综艺的详情数据-->
                        <TableLayout
                            android:id="@+id/arts_tlt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/program_name_rlt"
                            android:visibility="gone">
                            <TableRow
                                android:paddingTop="8dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="上映时间："/>
                                    <TextView
                                        android:id="@+id/arts_release"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        tools:text="2016"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="地区："/>
                                    <TextView
                                        android:id="@+id/arts_zone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        tools:text="大陆"/>
                                </LinearLayout>
                            </TableRow>
                            <TableRow android:paddingTop="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="类型："/>
                                    <TextView
                                        android:id="@+id/arts_subType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        tools:text="悬疑"/>
                                </LinearLayout>
                            </TableRow>
                            <TableRow android:paddingTop="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="主持人："/>
                                    <TextView
                                        android:id="@+id/art_actor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        tools:text="黄渤"/>
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/showDetailRlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:background="@color/play_line"/>
                        <TextView
                            android:id="@+id/detail_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:lineSpacingExtra="3dp"
                            android:maxLines="8"
                            android:ellipsize="end"
                            tools:text="卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖孩卖火柴的小女孩卖火柴的小女孩卖孩卖火柴的小女孩卖火柴的小女孩卖孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩卖火柴的小女孩"/>
                    </RelativeLayout>

                    <include layout="@layout/layout_baidu_ad"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        />

                    <!--电视剧的选集-->
                    <RelativeLayout
                        android:id="@+id/tv_rlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/bg_color"/>
                        <RelativeLayout
                            android:id="@+id/tel_selections_rlt"
                            android:layout_below="@id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingTop="14dp"
                            android:paddingBottom="15dp">
                            <ImageView
                                android:layout_width="3dp"
                                android:layout_marginTop="1dp"
                                android:layout_height="match_parent"
                                android:background="#ee2a27"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="选集"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/tel_selections_line"
                            android:layout_below="@id/tel_selections_rlt"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/play_line"/>
                        <RelativeLayout
                            android:layout_below="@id/tel_selections_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp">
                            <android.support.design.widget.TabLayout
                                android:id="@+id/tel_selections_tab"
                                app:tabSelectedTextColor="#f02323"
                                app:tabTextColor="#555555"
                                app:tabIndicatorColor="#f02323"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                            <com.sumavision.talktv2.ui.widget.WrapContentHeightViewPager
                                android:id="@+id/tel_select_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/tel_selections_tab"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <!--综艺的选集-->
                    <RelativeLayout
                        android:id="@+id/arts_rlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/white">
                        <ImageView
                            android:id="@+id/line7"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/bg_color"/>
                        <RelativeLayout
                            android:id="@+id/arts_selections_rlt"
                            android:layout_below="@id/line7"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingTop="14dp"
                            android:paddingBottom="15dp">
                            <ImageView
                                android:layout_width="3dp"
                                android:layout_marginTop="1dp"
                                android:layout_height="match_parent"
                                android:background="#ee2a27"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="选集"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/arts_selections_tv"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                tools:text="更新至20160522"
                                android:gravity="center_vertical"
                                android:drawableRight="@mipmap/index_nav_right48_icon_pressed"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/arts_selections_line"
                            android:layout_below="@id/arts_selections_rlt"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/play_line"/>
                        <RelativeLayout
                            android:layout_below="@id/arts_selections_line"
                            android:layout_width="match_parent"
                            android:layout_height="83dp">
                            <com.sumavision.talktv2.ui.widget.DetailHRecyclerView
                                android:id="@+id/selector_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_centerVertical="true"
                                android:scrollbars="none" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/recommandrlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/bg_color"/>
                        <RelativeLayout
                            android:id="@+id/recommend_rlt"
                            android:layout_below="@id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:paddingTop="14dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:layout_width="3dp"
                                android:layout_marginTop="1dp"
                                android:layout_height="match_parent"
                                android:background="#ee2a27"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="相关推荐"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/recommend_rlt">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recommend_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:scrollbars="none" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <com.sumavision.talktv2.ui.widget.LoadingLayout
                android:id="@+id/loadingLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            </com.sumavision.talktv2.ui.widget.LoadingLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
