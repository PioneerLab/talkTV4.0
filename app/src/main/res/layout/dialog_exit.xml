<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/exit_top"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="退出后将继续为您缓存"
            android:textSize="14sp"
            android:textColor="@color/exit_nomal_color"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/exit_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitXY"
            android:background="@drawable/exit_bg"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/btn_exit_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/btn_exit_ok"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="退出"
            android:textColor="@drawable/btn_exit_selector"
            android:background="@drawable/exit_selector"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />
        <Button
            android:id="@+id/btn_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="8dp"
            android:text="再看看"
            android:textColor="@drawable/btn_exit_selector"
            android:background="@drawable/exit_selector"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>
</LinearLayout>