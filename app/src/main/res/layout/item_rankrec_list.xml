<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="2dp"
    android:id="@+id/item_rlt"
    android:background="@color/bg_color">
    <RelativeLayout
        android:id="@+id/rl_rankrec_item"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_redline"
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@color/red"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_rankrec_classify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_redline"
            android:text="搜索历史"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:clickable="true"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_rankrec_more"
            android:clickable="true"
            android:text="更多 >"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_rankrec_item_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_rankrec_item"></android.support.v7.widget.RecyclerView>
</LinearLayout>