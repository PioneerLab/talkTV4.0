<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_rlt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.sumavision.talktv2.videoplayer.view.VodPlayerVideoView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">
            </com.sumavision.talktv2.videoplayer.view.VodPlayerVideoView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/ad_rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
            <com.sumavision.talktv2.ui.widget.MyScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ad_rlt">
                <LinearLayout
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/playdetail_playtime"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/playdetail_playtime"/>
                            <TextView
                                android:id="@+id/play_count"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:textSize="14sp"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@id/playdetail_playtime"
                                android:gravity="center_vertical"
                                tools:text="331.4万次播放"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/cache_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:visibility="gone"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/cache_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:layout_alignParentBottom="true"
                                android:text="缓存"/>
                        </RelativeLayout>
                        <com.sumavision.talktv2.ui.widget.MyLinearLayout
                            android:id="@+id/collect_mllt"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="40dp">
                            <CheckBox
                                android:id="@+id/collect_checkBox"
                                android:clickable="false"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@null"
                                android:button="@drawable/collect_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:text="收藏"/>
                        </com.sumavision.talktv2.ui.widget.MyLinearLayout>

                        <RelativeLayout
                            android:id="@+id/share_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@id/collect_mllt">
                            <ImageView
                                android:id="@+id/share_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/btn_share_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:layout_alignParentBottom="true"
                                android:text="分享"/>
                        </RelativeLayout>
                        <com.sumavision.talktv2.ui.widget.MyLinearLayout
                            android:id="@+id/praise_mllt"
                            android:layout_toLeftOf="@id/share_rlt"
                            android:layout_width="wrap_content"
                            android:paddingRight="8dp"
                            android:paddingLeft="12dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_height="40dp">
                            <CheckBox
                                android:id="@+id/praise_checkBox"
                                android:clickable="false"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@null"
                                android:button="@drawable/praise_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:text="点赞"/>
                        </com.sumavision.talktv2.ui.widget.MyLinearLayout>

                        <TextView
                            android:id="@+id/add_praise_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/share_rlt"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:visibility="invisible"
                            android:textSize="12sp"
                            android:text="+1"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:padding="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:drawableRight="@mipmap/chupinren"
                            android:gravity="center_vertical"
                            android:text="奇趣工作室 "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="129视频"
                            android:gravity="center_vertical"
                            android:drawableRight="@mipmap/index_nav_right48_icon_pressed"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/play_line"/>
                    <RelativeLayout
                        android:id="@+id/program_name_rlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            tools:text="我是刘科学我是刘科学我是刘科学我是刘科学我是刘科学"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/user_center_txt"
                            android:textSize="17sp" />
                        <RelativeLayout
                            android:id="@+id/viewMoreRlt"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_alignParentLeft="true"
                                android:text="详情"/>
                            <CheckBox
                                android:id="@+id/moreIcon"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@null"
                                android:clickable="false"
                                android:button="@drawable/expand_selector"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/showDetailRlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/info_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:lineSpacingExtra="3dp"
                            android:maxLines="8"
                            android:ellipsize="end"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_color"
                        android:visibility="gone"/>

                    <!--<include layout="@layout/layout_baidu_ad"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingBottom="15dp"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="4dp"
                            android:layout_marginTop="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="选集"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/play_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:visibility="gone">
                        <android.support.design.widget.TabLayout
                            android:id="@+id/media_selections_tab"
                            app:tabSelectedTextColor="#f02323"
                            app:tabTextColor="#555555"
                            app:tabIndicatorColor="#f02323"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:layout_below="@id/media_selections_tab"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="1dp"
                            android:id="@+id/selections_line"
                            android:background="@color/play_line"/>
                        <android.support.v4.view.ViewPager
                            android:id="@+id/media_select_container"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@id/selections_line"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_color"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingBottom="15dp">
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_marginTop="1dp"
                            android:layout_height="match_parent"
                            android:background="#ee2a27"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="相关剧集"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/play_line"/>
                    <com.sumavision.talktv2.ui.widget.LMRecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clipToPadding="false"/>
                </LinearLayout>
            </com.sumavision.talktv2.ui.widget.MyScrollView>

            <com.sumavision.talktv2.ui.widget.LoadingLayout
                android:id="@+id/loadingLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
            </com.sumavision.talktv2.ui.widget.LoadingLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>