<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"/>
        <LinearLayout
            android:id="@+id/ll_search_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_search_history"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_redline"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="#ee2a27"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_redline"
                    android:text="搜索历史"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/iv_search_deletehistory"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/searching_delete_selector"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"/>
            <LinearLayout
                android:id="@+id/ll_searchhis_1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    android:id="@+id/tv_search_info1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    tools:text="好先生"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#ededed"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/tv_search_info2"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    tools:text="亲爱的翻译官"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_searchhis_2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    android:id="@+id/tv_search_info3"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    tools:text="最好的我们"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#ededed"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/tv_search_info4"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    tools:text="欢乐颂"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_searchhis_3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    android:id="@+id/tv_search_info5"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    tools:text="旋风十一人"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#ededed"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/tv_search_info6"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    tools:text="魔兽"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#ededed"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_search_hot"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_redline2"
                android:layout_width="2dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="#ee2a27"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_redline2"
                android:text="热门搜索"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:clickable="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_search_list"
                android:divider="@null">
            </ListView>
            <com.sumavision.talktv2.ui.widget.LoadingLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_main_loadlayout"/>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
