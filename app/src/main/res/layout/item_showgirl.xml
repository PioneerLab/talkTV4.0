<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="2dp"
    android:id="@+id/item_rlt"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_color">
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white"
        tools:text="最好的我们"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/user_center_txt"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_above="@id/item_name"/>
    <ImageView
        android:id="@+id/live_flag"
        android:layout_width="32dp"
        android:visibility="gone"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/liveshow_icon"/>
    <FrameLayout
        android:id="@+id/item_frame"
        android:layout_above="@id/item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:foreground="@mipmap/image">
    </FrameLayout>
    <TextView
        android:id="@+id/remark_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:drawableLeft="@mipmap/user_white"
        android:layout_alignBottom="@id/item_img"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        tools:text="更新至2015.04.04"/>

</RelativeLayout>