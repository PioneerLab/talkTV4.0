<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/collect_rlt"
    android:padding="10dp">


    <com.sumavision.talktv2.ui.widget.MyLinearLayout
        android:id="@+id/checkbox_rlt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:focusable="false"
            android:button="@drawable/item_check_history_selector"/>
    </com.sumavision.talktv2.ui.widget.MyLinearLayout>
    <RelativeLayout
        android:id="@+id/img_rlt"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/checkbox_rlt">
        <ImageView
            android:id="@+id/pic_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/default_img_bg"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_rlt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img_rlt">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="@color/user_center_txt"
            android:layout_alignParentTop="true"
            android:text="郭德纲于谦《训练人生》"/>
        <TextView
            android:id="@+id/actor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:layout_below="@id/name_tv"
            android:textColor="@color/media_text_color"
            android:text="李丁,王志文,刘佩琦,孔琳,张少华,李冰冰,岳秀清,何冰"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/score_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:textColor="@color/media_text_color"
                android:text="8.7分"/>
            <ImageView
                android:id="@+id/cache_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@mipmap/finish_downloading">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>