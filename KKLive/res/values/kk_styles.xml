        <item name="android:maxHeight">25dip</item>
        <item name="android:fullDark">@drawable/kk_progress_dialog_bg</item>
        <item name="android:topDark">@drawable/kk_progress_dialog_bg</item>
        <item name="android:centerDark">@drawable/kk_progress_dialog_bg</item>
        <item name="android:bottomDark">@drawable/kk_progress_dialog_bg</item>
        <item name="android:fullBright">@drawable/kk_progress_dialog_bg</item>
