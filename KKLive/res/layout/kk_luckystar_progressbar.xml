<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="120dip"
        android:layout_height="18dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip" >

        <ImageView
            android:id="@+id/luckystar_progressbar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/kk_luckystar_bg" />

        <ImageView
            android:id="@+id/luckystar_progressbar_current"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/kk_luckystar_current" />

        <TextView
            android:id="@+id/luckystar_progressbar_titletext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/kk_background_white"
            android:textSize="@dimen/kk_text_10_size" />

        <com.melot.meshow.widget.ScrollingTextView
            android:id="@+id/luckystar_progressbar_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dip"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center_vertical|left"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/kk_background_white"
            android:textSize="@dimen/kk_text_10_size"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/luckystar_progressbar_icon"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_centerVertical="true"
        android:src="@drawable/kk_luckystar_kicon" />

    <ImageView
        android:id="@+id/luckystar_progressbar_winicon"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_centerVertical="true"
        android:src="@drawable/kk_luckystar_winicon"
        android:visibility="gone" />

</RelativeLayout>