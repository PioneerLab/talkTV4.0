<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="274dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kk_dialog_view_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="37dip"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/kk_family_apply"
            android:background="@drawable/kk_dialog_view_top_bg"
            android:textColor="@color/kk_dynamic_fontcolor_context"
            android:textSize="@dimen/kk_text_dialog_title_size"
             />

        <TextView
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="0.3dip"
            android:layout_marginTop="13dip"
            android:layout_marginBottom="13dip"
        	android:layout_marginLeft="15dip"
        	android:layout_marginRight="15dip"
            android:background="@color/kk_app_color_dark_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:layout_marginBottom="25dip"
        	android:layout_marginLeft="15dip"
        	android:layout_marginRight="15dip"
        	android:text="@string/kk_family_apply"
            android:textSize="@dimen/kk_text_big_size"
            android:textColor="@color/kk_room_text_gray" />

        <RelativeLayout
            android:id="@+id/register_view"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="10dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/register_gift1"
                android:layout_width="86dip"
                android:layout_height="fill_parent"
                android:background="@drawable/kk_v1_bg"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/register_gift1"
                android:background="@drawable/kk_first_fill_item_bg"
                android:paddingLeft="9dip" >

                <TextView
                    android:id="@+id/register_gift1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="15dip" />
            </RelativeLayout>
        </RelativeLayout>

 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kk_popup_view_horizontal_line">
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dip"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/cancel_btn"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"  
                android:gravity="center"
                android:background="@drawable/kk_custom_dialog_btn"
                android:textColor="@color/kk_room_text_gray"
                android:textSize="@dimen/kk_text_big_size" />
            
             <ImageView
            android:id="@+id/line_button_imageview"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:background="@drawable/kk_popup_view_vertical_line"/>
        
            <Button
                android:id="@+id/next_btn"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"  
                android:gravity="center"
                android:background="@drawable/kk_custom_dialog_btn"
                android:textColor="@color/kk_standard_blue"
                android:textSize="@dimen/kk_text_big_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>