<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="274dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kk_dialog_view_content_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sofa_min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="25dip"
            android:textColor="@color/kk_text_gray"
            android:textSize="@dimen/kk_text_big_size" />

        <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_marginBottom="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sofa_min_price"
            android:layout_below="@+id/sofa_min_price"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/num_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kk_room_sofa_price_str"
                android:textColor="@color/kk_room_text_gray"
                android:textSize="@dimen/kk_text_big_size" />

            <TextView
                android:id="@+id/num_edit"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_marginLeft="6dip"
                android:background="@drawable/kk_room_grab_seat_btn"
                android:clickable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minWidth="195dip"
                android:numeric="integer"
                android:paddingLeft="9dip"
                android:text="100秀币"
                android:textColor="@color/kk_room_text_gray"
                android:textSize="@dimen/kk_text_big_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_layout"
            android:layout_marginTop="15dip"
            android:background="@drawable/kk_popup_view_horizontal_line"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dip"
            android:layout_below="@+id/line_layout"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/kk_custom_dialog_btn"
                android:gravity="center"
                android:text="@string/kk_cancel"
                android:textColor="@color/kk_room_text_gray"
                android:textSize="@dimen/kk_text_big_size" />

            <LinearLayout
                android:id="@+id/line_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/kk_popup_view_vertical_line"
                android:orientation="vertical" />

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/kk_custom_dialog_btn"
                android:gravity="center"
                android:textColor="@color/kk_standard_blue"
                android:textSize="@dimen/kk_text_big_size" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>