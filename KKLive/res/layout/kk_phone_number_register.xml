<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/kk_background_gray"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/country_edit"
            android:layout_width="52dp"
            android:layout_height="40dip"
            android:background="@drawable/kk_login_edit_bg"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:hint="@string/forget_baL"
            android:text="@string/forget_baL" 
            android:textColorHint="@color/kk_app_color_edit_hint"
            android:textSize="14sp" />

        <com.melot.meshow.widget.EditInputLayout
            android:id="@+id/phone_num_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/kk_register_btn"
        android:enabled="false"
        android:text="@string/next"
        android:onClick="nextClick"
        android:textColor="@color/kk_color_btn"
        android:textSize="@dimen/kk_button_text" />
    
    <LinearLayout
        android:id="@+id/top_view_din"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_agree"
            android:textColor="@color/kk_app_tips_text" />

        <TextView
            android:id="@+id/agreement2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement"
            android:textColor="@color/kk_news_notify_bnt" />
    </LinearLayout>

</LinearLayout>