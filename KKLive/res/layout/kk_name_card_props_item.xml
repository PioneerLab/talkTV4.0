<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <ImageView
        android:id="@+id/pro_content"
        android:layout_width="fill_parent"
        android:paddingTop="14dip"
        android:paddingBottom="11dip"
        android:layout_height="62dip"
        android:background="#f0eff5"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/lucky_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kk_namecard_luck_id"
        android:gravity="center"
        android:textColor="#e67200"
        android:textSize="@dimen/kk_text_small_size" />

    <ImageView
        android:id="@+id/pro_useless"
        android:layout_width="fill_parent"
        android:scaleType="fitXY"
        android:layout_height="62dip" />

    <TextView
        android:id="@+id/pro_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_below="@+id/pro_content"
        android:gravity="center_horizontal"
        android:textColor="#a9a9a9"
        android:textSize="11sp" />

</RelativeLayout>