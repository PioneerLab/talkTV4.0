<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="274dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kk_dialog_view_content_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="18dip"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="18dip"
            android:layout_toRightOf="@+id/car_icon"
            android:layout_marginTop="25dp"
            android:scaleType="centerInside"
            android:text="@string/kk_cancel"
            android:textColor="@color/kk_dynamic_fontcolor_context"
            android:textSize="@dimen/kk_text_dialog_title_size" />

        <TextView
            android:id="@+id/car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_icon"
            android:layout_marginTop="16dip"
            android:layout_alignLeft="@id/car_name"
            android:scaleType="centerInside"
            android:text="@string/kk_cancel"
            android:textColor="@color/kk_room_text_gray"
            android:textSize="@dimen/kk_text_big_size" />

        <ImageView
            android:id="@+id/line_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_price"
            android:layout_marginTop="25dip"
            android:background="@drawable/kk_popup_view_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dip"
            android:layout_below="@+id/line_imageview"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/kk_custom_dialog_btn"
                android:gravity="center"
                android:text="@string/kk_cancel"
                android:textColor="@color/kk_room_text_gray"
                android:textSize="@dimen/kk_text_big_size" />

            <LinearLayout
                android:id="@+id/line_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/kk_popup_view_vertical_line"
                android:orientation="vertical" />

            <Button
                android:id="@+id/view_cars_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/kk_custom_dialog_btn"
                android:gravity="center"
                android:text="@string/kk_room_grab_park_view_cars"
                android:textColor="@color/kk_standard_blue"
                android:textSize="@dimen/kk_text_big_size" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>